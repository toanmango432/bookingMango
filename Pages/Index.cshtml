@page
@model OnlineStore.Pages.IndexModel
@{
    ViewData["Title"] = "Home Page";
}
<div class="container-custom-booking d-flex">
    <div class="header-custom-booking  pt-4 px-8">
        <i class="fa-solid fa-arrow-left icon-left-booking"></i>
        <h3 class="text-uppercase title-booking mb-0">Custom online booking</h3>
    </div>
    <div class="container-templates w-100 px-8">
        <div class="wrap-header-templates d-flex justify-content-between mt-4">
            <h4 class="text-uppercase header-templates-left mb-0">Templates</h4>
            <div class="d-flex align-items-center gap-2">
                <h5 class="header-templates-right mb-0">Templates gallery</h5>
                <i id="icon-templates-gallery" class="fa-solid fa-chevron-down rotate-transition"></i>
            </div>
        </div>
        <div class="wrap-list-templates mb-4">
            <div class="gird-4">
                <div class="wrap-item-templates">
                    <div class="image-templates">
                        <img src="./assets/images/retro.png" alt="Image retro" class="img-original" />
                    </div>
                    <div class="info-templates">
                        <p class="title-item-templates mb-0"> Restro</p>
                        <span class="subtitle-item-templates">Classic and modern style</span>
                    </div>
                </div>
                <div class="wrap-item-templates">
                    <div class="image-templates">
                        <img src="./assets/images/pastel.png" alt="Image pastel" class="img-original" />
                    </div>
                    <div class="info-templates">
                        <p class="title-item-templates mb-0"> Pastel</p>
                        <span class="subtitle-item-templates">Popular style</span>
                    </div>
                </div>
                <div class="wrap-item-templates">
                    <div class="image-templates">
                        <img src="./assets/images/neon.jpg" alt="Image neon" class="img-original" />
                    </div>
                    <div class="info-templates">
                        <p class="title-item-templates mb-0"> Neon</p>
                        <span class="subtitle-item-templates">Classic and modern style</span>
                    </div>
                </div>
                <div class="wrap-item-templates">
                    <div class="image-templates">
                        <img src="./assets/images/vintage.png" alt="Image vintage" class="img-original" />
                    </div>
                    <div class="info-templates">
                        <p class="title-item-templates mb-0"> Restro</p>
                        <span class="subtitle-item-templates">Cclassic and modern style</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="container-deploy w-100 px-8 pb-8">
        <div class="wrap-list-deploy">
            <div class="wrap-search-recent d-flex justify-content-between">
                <h4 class="text-uppercase header-templates-left mb-0">Recent</h4>
                <div class="search-filter-recent">
                    <div class="left-search-filter">
                        <div class="search-recent">
                            <input placeholder="Search item" />
                            <div class="btn-search">
                                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="25" viewBox="0 0 24 25"
                                    fill="none">
                                    <path
                                        d="M11.5 21.0605C16.7467 21.0605 21 16.8073 21 11.5605C21 6.31384 16.7467 2.06055 11.5 2.06055C6.25329 2.06055 2 6.31384 2 11.5605C2 16.8073 6.25329 21.0605 11.5 21.0605Z"
