                        <td class="status-item draft d-flex align-items-center justify-content-between pa-3">
                            <span class="py-1 px-6">
                                Draft
                            </span>
                            <i class="fa-solid fa-ellipsis-vertical"></i>
                        </td>
                    </tr>
                </tbody>
            </table>

        </div>
    </div>
</div>
